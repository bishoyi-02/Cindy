<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:chatview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <co.intentservice.chatui.ChatView
        android:id="@+id/chat_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        chatview:backgroundColor="@color/white"
        chatview:bubbleBackgroundSend="#CABCA1"
        chatview:bubbleBackgroundRcv="#CABCA1"
        chatview:bubbleElevation="elevated"
        chatview:inputTextColor="@color/white"
        chatview:sendBtnBackgroundTint="#2E281B"
        chatview:inputBackgroundColor="#2E281B" />



</androidx.constraintlayout.widget.ConstraintLayout>